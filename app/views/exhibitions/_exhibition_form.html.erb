    <%= form_with(model: @exhibition) do |f| %>
        <div>
            <%= f.label :title %>
            <%= f.text_field :title %>
        </div>
        <div>
            <%= f.label :url %>
            <%= f.text_field :url %>
        </div>

        <%= render partial: 'shared/gallery_form', locals: { form: f } %>

        <div> 
            <%= f.submit 'Next' %>
        </div>
    <% end %>