<h1> Exhibitions </h1>

<%= link_to "Add Exhibition", new_exhibition_path %>


<div>
  <ul>
    <% @exhibitions.each do |exhibition| %>
      <li>
        <%= link_to exhibition.title, exhibition_path(exhibition) %>
      </li>
    <% end %>
  </ul>
</div>

<div data-controller="locations">
  <%= form_with url: galleries_path, method: :get, data: {turbo_frame: "galleries"} do |form| %>
    <%= form.label :query, "Search Gallery" %>
    <%= form.text_field :query, placeholder: 'Search for a gallery...', data: { locations_target: "locationInput", action: "input->locations#locationInputChanged" } %>
    <ul data-locations-target="locationDropdown"></ul>

  <% end %>
</div>

