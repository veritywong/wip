<h1 style="color: red; font-family: Arial, sans-serif;">Exhibitions/Events</h1>

<%= link_to "Add event", new_event_path %>

<div>
  <ul>
    <% @events.each do |event| %>
      <li>
        <%= link_to event.title, event_path(event) %>
      </li>

      <% if event.images.any? %>
          <%= image_tag url_for(event.images.first), style: "width: 300px; height: 100%;" %>
      <% end %>
    <% end %>
  </ul>
</div>
